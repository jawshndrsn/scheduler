<%= form_for(@candidate, :html => { :multipart => true }) do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :resume, "Resume" %><br />
    <%= f.file_field :resume %>
  </div>
  <div class="field">
    <%= "Tag List" %><br />
    <%= f.text_area :tag_list, :rows => "5", :cols => "40" %>
  </div>
  
  <div class="field">
    <%= f.label :project_id %><br />
    <%= f.select :project_id, Project.all.collect{|p| [ p.name, p.id ] }, {:prompt => 'Select Project'} %>
  </div>
  <div class="field">
    <%= f.label :user_id, "Assigned To" %><br />
    <%= f.select :user_id, User.all.collect{|u| [ u.name, u.id ] }, {:prompt => 'Select Person'} %>
  </div>
  <div class="field">
    <%= f.label :status_id, "Status" %><br />
    <%= f.select :status_id, Status.all.collect{|s| [ s.name, s.id ]}, {:prompt => 'Select Status'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
