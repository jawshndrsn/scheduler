<h1>Candidate ~ <%= @candidate.name %></h1>
<%= render '/interviews/candidate_info' %>
<%= render :partial => '/interviews/feed_back_info', :object => @candidate.interviews.uncancelled %>
<%= render :partial => '/interviews/upcoming', :object => @candidate.interviews.upcoming %>
<%= render '/interviews/previous_schedules' %>

<br />
<% if can?(:update, Candidate) %>
<%= link_to 'Edit', edit_candidate_path(@candidate)  %> |
<%= link_to 'Add an Interview Schedule', new_candidate_interview_path(@candidate) %> |
<% end %>
<%= link_to('Back', url_for(:back)) %>
<br />
