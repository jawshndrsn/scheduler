<h3>This Month Interview Schedule</h3>

<% unless this_month_interview_schedule.blank?%>
<table id="box-table-a">
<tr>
  <th>Name</th>
  <th>Scheduled at</th>
  <th>Actions</th>
</tr>
<% this_month_interview_schedule.each do |interview| %>
<tr>
  <td><%= interview.candidate.name %></td>
  <td><%= interview.scheduled_at.to_s(:simple)%> at <%= interview.schedule_time%></td>
  <td><%= link_to 'Show', interview %> | <%= link_to 'Edit', edit_interview_path(interview) %> | <%= link_to 'Destroy', interview, confirm: 'Are you sure?', method: :delete %> <%= link_to "Feedback", new_candidate_interview_comment_path(interview.candidate, interview)%></td>
</tr>
<% end %>
</table>
<%else%>
<p class="no_interview_schedule">No Interview Schedule for this month</p>
<%end%>
