<h1>Listing Statuses</h1>

<table id="box-table-a">
  <thead>
  <tr>
    <th scope="col" width="70%">Name</th>
    <th scope="col" width="30%">Actions</th>
    
  </tr>
</thead>
<tbody>
<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%#= link_to 'Show', status %><%= link_to 'Edit', edit_status_path(status) %> | <%= link_to 'Destroy', status, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Status', new_status_path %>
