<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email, "Username" %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= link_to "Forgot Password?",forgotten_sign_in_url%>
  </p>
  <p class="button"><%= submit_tag "Sign in" %></p>
<% end %>

